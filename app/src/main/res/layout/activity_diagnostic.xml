<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File System Diagnostic"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_run_diagnostic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Запустить полную диагностику"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_test_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тест сохранения файла"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_clear_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Очистить лог"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tv_diagnostic_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нажмите кнопку для запуска диагностики..."
            android:textSize="12sp"
            android:textColor="#00FF00"
            android:background="#2E2E2E"
            android:padding="16dp"
            android:fontFamily="monospace"
            android:textIsSelectable="true"
            android:scrollbars="vertical" />

    </LinearLayout>

</ScrollView>
